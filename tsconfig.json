{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Bundler", // 또는 "NodeNext"
		"lib": ["ES2020", "DOM"],
		"jsx": "react-jsx",
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [".", "src/**/*"],
	"exclude": ["dist", "node_modules"]
}
